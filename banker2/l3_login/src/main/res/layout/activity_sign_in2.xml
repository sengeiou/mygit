<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_sign_in2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bj"
    tools:context="com.beanu.l3_login.SignIn2Activity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:src="@drawable/register_logo"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/register_bz"/>

    <View
        android:id="@+id/virtual_line"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        />


    <Button
        android:id="@+id/btn_to_login"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/virtual_line"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="78dp"
        android:layout_marginRight="78dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/base_btn_login"
        android:text="登录"
        android:textColor="@color/white"/>


    <Button
        android:id="@+id/btn_to_register"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/btn_to_login"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="78dp"
        android:layout_marginRight="78dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/base_btn_register"
        android:text="注册"/>

</RelativeLayout>
