<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="8dp">

    <ImageView
        android:id="@+id/img_item_news"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY"/>


    <TextView
        android:id="@+id/txt_item_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_item_news"
        android:maxLines="2"
        android:textColor="@color/base_font_black"
        tools:text="TITLE"/>


    <TextView
        android:id="@+id/txt_item_news_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_item_news"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/img_item_news"
        android:maxLines="1"
        android:textColor="@color/gray"
        android:textSize="12sp"
        tools:text="描述"/>


    <TextView
        android:id="@+id/txt_item_news_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_item_news"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/information_kan_s"
        android:drawablePadding="4dp"
        android:textColor="@color/gray"
        android:textSize="12sp"
        tools:text="0"/>
</RelativeLayout>