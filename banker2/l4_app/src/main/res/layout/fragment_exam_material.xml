<RelativeLayout
    android:id="@+id/rl_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.beanu.l4_bottom_tab.ui.module1_exam.ExamMaterialFragment">

    <ScrollView
        android:id="@+id/under_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!--题干-->
        <TextView
            android:id="@+id/txt_exam_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:lineSpacingMultiplier="1.2"
            android:padding="16dp"
            android:textColor="@color/base_font_black"
            android:textSize="15sp"
            tools:text="[材料阅读] 在银行的资产负债表中，客户存款属于："/>


    </ScrollView>


    <LinearLayout
        android:id="@+id/slide_plan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/exam_material_height"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/img_drag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:src="@drawable/show_up_and_down"
            android:text="拖拽"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_line">

        </android.support.v4.view.ViewPager>

    </LinearLayout>

</RelativeLayout>
