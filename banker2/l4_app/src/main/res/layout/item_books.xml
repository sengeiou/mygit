<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="16dp">

    <ImageView
        android:id="@+id/img_book_face"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="@drawable/default_img"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/img_book_face"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_font_black"
            android:textSize="14sp"
            tools:text="中国农业银行招聘考试复习全套书"/>

        <TextView
            android:id="@+id/txt_book_concern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/base_font_gray"
            android:textSize="12sp"
            tools:text="上海交通大学出版社"/>

        <RatingBar
            android:id="@+id/rate_bar_book"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/txt_book_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/yancy_red700"
            android:textSize="18sp"
            tools:text="¥45.50"/>

    </LinearLayout>


</RelativeLayout>

