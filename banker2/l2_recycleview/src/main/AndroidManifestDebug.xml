<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.beanu.l2_recycleview"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme">
        <activity android:name=".demo.DemoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".demo.classic.DemoClassicPTRActivity">
        </activity>
        <activity android:name=".demo.storehouse.StoreHouseActivity">
        </activity>
        <activity android:name=".demo.customAnim.DemoAnimPTRActivity">
        </activity>
        <activity android:name=".demo.loadmore.DemoLoadMoreActivity">
        </activity>
        <activity android:name=".demo.loadmore_header.DemoHeaderLoadMoreActivity">
        </activity>
        <activity android:name=".demo.simplest.DemoSimplestActivity">
        </activity>

    </application>

</manifest>