<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff">


    <ImageView
        android:id="@+id/p1_single_line_ptt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/my_bankcard"/>

    <TextView
        android:id="@+id/t1_single_line_ptt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/p1_single_line_ptt"
        android:textColor="@color/base_font_black"
        android:textSize="14sp"
        tools:text="我的银行卡"/>


    <ImageView
        android:id="@+id/p2_single_line_pttp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/arrow_right"/>

    <TextView
        android:id="@+id/t2_single_line_ptt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/p2_single_line_pttp"
        android:textColor="#777"
        android:textSize="12sp"
        tools:text="已设置"/>

    <View
        style="@style/base_line_horizontal"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>