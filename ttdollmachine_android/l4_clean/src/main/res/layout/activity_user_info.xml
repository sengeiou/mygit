<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/arad_toolbar"/>

    <RelativeLayout
        android:id="@+id/rl_item_avatar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="头像"
            android:textColor="@color/base_font_black"
            android:textSize="14sp"/>


        <ImageView
            android:id="@+id/p1_single_line_pttp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/base_arrow_right"/>

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/p1_single_line_pttp"
            android:src="@drawable/base_head_default"
            />

        <View
            style="@style/base_line_horizontal"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_item_nickname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="昵称"
            android:textColor="@color/base_font_black"
            android:textSize="14sp"/>


        <ImageView
            android:id="@+id/p2_single_line_pttp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/base_arrow_right"/>

        <TextView
            android:id="@+id/txt_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/p2_single_line_pttp"
            android:textColor="#777"
            android:textSize="12sp"
            tools:text="小糯米"/>

        <View
            style="@style/base_line_horizontal"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


    <!--性别-->
    <RelativeLayout
        android:id="@+id/rl_item_sex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="个性签名"
            android:textColor="@color/base_font_black"
            android:textSize="14sp"/>


        <ImageView
            android:id="@+id/p2_single_line_pttp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/base_arrow_right"/>

        <TextView
            android:id="@+id/txt_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/p2_single_line_pttp3"
            android:textColor="#777"
            android:textSize="12sp"
            tools:text="男"/>

        <View
            style="@style/base_line_horizontal"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <!--学校-->
    <RelativeLayout
        android:id="@+id/rl_item_school"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="收货地址"
            android:textColor="@color/base_font_black"
            android:textSize="14sp"/>


        <ImageView
            android:id="@+id/p2_single_line_pttp33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/base_arrow_right"/>

        <TextView
            android:id="@+id/txt_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/p2_single_line_pttp33"
            android:textColor="#777"
            android:textSize="12sp"
            tools:text="山东大学"/>

        <View
            style="@style/base_line_horizontal"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


</LinearLayout>
