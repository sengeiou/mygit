<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/layout_top"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lost">


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="148dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/paolu"/>

    <TextView
        android:id="@+id/txt_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="对方跑路，没有人获得奖励"
        android:textColor="@color/color_purple"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"/>

    <ImageView
        android:id="@+id/img_avatar_me"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView17"
        app:layout_constraintEnd_toStartOf="@+id/imageView17"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView17"
        app:srcCompat="@drawable/who"/>

    <ImageView
        android:id="@+id/img_avatar_other"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView17"
        app:layout_constraintTop_toBottomOf="@+id/txt_tips"
        app:srcCompat="@drawable/who"/>

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/img_avatar_other"
        app:layout_constraintEnd_toStartOf="@+id/img_avatar_other"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img_avatar_me"
        app:layout_constraintTop_toTopOf="@+id/img_avatar_other"
        app:srcCompat="@drawable/pk_vs"/>

    <TextView
        android:id="@+id/txt_name_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="盛夏"
        android:textColor="@color/font_white"
        app:layout_constraintEnd_toEndOf="@+id/img_avatar_me"
        app:layout_constraintStart_toStartOf="@+id/img_avatar_me"
        app:layout_constraintTop_toBottomOf="@id/img_avatar_me"/>

    <TextView
        android:id="@+id/txt_name_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Prines"
        android:textColor="@color/font_white"
        app:layout_constraintEnd_toEndOf="@+id/img_avatar_other"
        app:layout_constraintStart_toStartOf="@+id/img_avatar_other"
        app:layout_constraintTop_toBottomOf="@id/img_avatar_other"/>

    <TextView
        android:id="@+id/txt_times_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="抓了1次"
        android:textColor="@color/color_purple"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_avatar_me"
        app:layout_constraintStart_toStartOf="@+id/img_avatar_me"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_me"/>

    <TextView
        android:id="@+id/txt_times_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="抓了1次"
        android:textColor="@color/color_purple"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_avatar_other"
        app:layout_constraintStart_toStartOf="@+id/img_avatar_other"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_other"/>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_ok_dialog_selector"
        android:text="确定"
        android:textColor="@color/font_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_share"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_times_me"/>

    <Button
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_share_dialog_selector"
        android:text="分享"
        android:visibility="gone"
        android:textColor="@color/font_white"
        app:layout_constraintBottom_toBottomOf="@+id/btn_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_ok"
        app:layout_constraintTop_toTopOf="@+id/btn_ok"/>
</android.support.constraint.ConstraintLayout>