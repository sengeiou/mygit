<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="8dp">

    <TextView
        android:id="@+id/txt_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@color/base_font_black"
        android:textSize="16sp"
        tools:text="消息标题"/>


    <ImageView
        android:id="@+id/img_message"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/txt_message_title"
        android:scaleType="centerCrop"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_message_info2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_message"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="通知内容，不好看你来打我呀"
        />

    <TextView
        android:id="@+id/txt_message_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_message_info2"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        tools:text="阅读更多"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/txt_message_info"
        android:layout_marginTop="4dp"
        android:src="@drawable/base_arrow_right"/>

</RelativeLayout>