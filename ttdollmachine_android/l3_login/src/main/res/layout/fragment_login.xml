<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="16dp"
              tools:context=".ui.LoginFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/login_octopus"
        />

    <EditText
        android:id="@+id/edit_login_phone"
        style="@style/LoginEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_text"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:theme="@style/LoginEditTextTheme"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/edit_login_password"
            style="@style/LoginEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_text"
            android:hint="请输入验证码"
            android:inputType="number"
            android:theme="@style/LoginEditTextTheme"/>


        <TextView
            android:id="@+id/btn_register_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/blue_kuang"
            android:clickable="false"
            android:gravity="center"
            android:padding="8dp"
            android:text="获取验证码"
            android:textColor="#6787EC"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_login_login"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:enabled="false"
        android:text="开始游戏"
        android:textColor="@color/white"
        android:textSize="16sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/txt_login_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/login_wechat"
            android:text="忘记密码?"/>


        <ImageView
            android:id="@+id/txt_login_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:gravity="center"
            android:src="@drawable/login_qq"
            android:text="立即注册"/>

    </LinearLayout>


</LinearLayout>