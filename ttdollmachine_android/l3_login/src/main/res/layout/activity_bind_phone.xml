<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.beanu.l3_login.ui.BindPhoneActivity">


    <include layout="@layout/arad_toolbar"/>

    <EditText
        android:id="@+id/edit_login_phone"
        style="@style/LoginEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_text"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:theme="@style/LoginEditTextTheme"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/edit_login_password"
            style="@style/LoginEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_text"
            android:hint="请输入验证码"
            android:inputType="number"
            android:theme="@style/LoginEditTextTheme"/>


        <TextView
            android:id="@+id/btn_register_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:background="@drawable/blue_kuang"
            android:clickable="false"
            android:gravity="center"
            android:padding="8dp"
            android:text="获取验证码"
            android:textColor="#6787EC"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_login_login"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:enabled="true"
        android:text="开始游戏"
        android:textColor="@color/white"
        android:textSize="16sp"/>


</LinearLayout>
